    <body>
        <!-- MultiStep Form -->
<div class="container-fluid" id="grad1">
    <div class="row justify-content-center mt-0">
        <div class="col-11 col-sm-9 col-md-7 col-lg-6 text-center p-0 mt-3 mb-2">
            <div class="card px-0 pt-4 pb-0 mt-3 mb-3">
                <h2><strong>Sign Up Your User Account</strong></h2>
                <p>Fill all form field to go to next step</p>
                <div class="row">
                    <div class="col-md-12 mx-0">
                        <form id="msform">
                            <!-- progressbar -->
                            <ul id="progressbar">
                                <li class="active" id="account"><strong>Step 1</strong></li>
                                <li id="personal"><strong>Step 2</strong></li>
                                <li id="payment"><strong>Step 3</strong></li>
                                <li id="confirm"><strong>Step 4</strong></li>
                            </ul>
                            <!-- fieldsets -->
                            <fieldset>
                            <div class="form" id="form1">
                                <div class="form-card">
                                    <h2 class="fs-title">Account Information</h2>
                                    <div class="form-usertype">
                                        <select name="user" id ="user" class="user" value="{{data1.user}}" oninput="checkUser()" style="appearance: none;">
                                            <option selected disabled hidden>Choose User Type</option>
                                            <option value="Client">Client</option>
                                            <option value="Employee">Employee</option>
                                        </select>
                                    </div>

                                    <div class="form-jobtype">
                                        <select name="job" id ="job" class="job" value="{{data1.job}}" oninput="checkUser()" style="appearance: none; display: none;">
                                            <option selected disabled hidden>Choose Job Type</option>
                                            <option value="Carpenter">Carpenter</option>
                                            <option value="Electrician">Electrician</option>    
                                            <option value="Mason">Mason</option>
                                            <option value="Painter">Painter</option>
                                            <option value="Plumber">Plumber</option>
                                            <option value="Welder">Welder</option>
                                            <option value="Labor Helper">Labor Helper</option>
                                        </select>
                                    </div><br>

                                    <input type="text" class="name" name="name" placeholder="FirstName MI. LastName" oninput="checkName()" size="30" value="{{data1.name}}">
                                    <span class="error name-error">
                                        <i class="bx bx-error-circle error-icon"></i>
                                    </span> <p class="error-text">This field is required</p>

                                    <input type="text" class="email" name="email" placeholder="example@example.com" oninput="checkEmail()" size="30" value="{{data1.email}}">
                                    <span class="error email-error">
                                        <i class="bx bx-error-circle error-icon"></i>
                                    </span> <p class="error-text">This field is required</p>

                                    <input type="text" class="username" name="username" placeholder="Username" oninput="checkUsername()" size="30" value="{{data1.username}}">
                                    <span class="error username-error">
                                        <i class="bx bx-error-circle error-icon"></i>
                                    </span> <p class="error-text">This field is required</p>

                                    <input type="password" class="password" id="password" name="password" placeholder="Password" oninput="checkPassword()" size="30" value="{{data1.password}}">
                                    <span class="error password-error">
                                        <i class="bx bx-error-circle error-icon"></i>
                                    </span> <i class="bx bx-hide" id="hide1"></i><i class="bx bx-show" id="show1"></i> <p class="error-text">This field is required</p>

                                    <input type="password" class="confPass" id="confPass" name="confPass" placeholder="Confirm Password" oninput="checkConfPass()" size="30" value="{{data1.confPass}}">
                                    <span class="error confPass-error">
                                        <i class="bx bx-error-circle error-icon"></i>
                                    </span><i class="bx bx-hide" id="hide2"></i><i class="bx bx-show" id="show2"></i> <p class="error-text">This field is required</p>

                                    <div class="btn-box">
                                        <button type="button" id="Next1">Next</button>
                                    </div>
                                </div>
                            </div>
                            </fieldset>
                            <fieldset>
                                <div class="form" id="form2" tabindex="-1" aria-hidden="true" data-bs-backdrop="false" autocomplete="on">
                                    <div class="form-bday">
                                        <h1 for="birthday" style="font-size: 12px; display: flex; font-weight: normal;">Birthday:</h1>
                                        <input style="margin-top: 0px; text-align: center;" type="date" id="birthday" class="birthday" oninput="checkBDay()" name="birthday" max="2023-12-31" value="{{data1.birthday}}"> 
                                    </div>

                                    <div class="form-gender">
                                        <h1 style="font-size: 12px; margin-top: -16px; display: flex; font-weight: normal;">Gender:</h1> 
                                        <div class="form-radiobutton">
                                            <input type="radio" id="Male" class="gender" oninput="checkGender()" name="gender" value="Male">
                                            <label style="font-size: 15px" for="Male">
                                                <span>Male</span>
                                            </label>
                                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <input type="radio" id="Female" class="gender" oninput="checkGender()" name="gender" value="Female">
                                            <label style="font-size: 15px; left: 110px;" for="Female">
                                                <span>Female</span>
                                            </label>
                                        </div>
                                    </div>

                                    <input type="number" class="contactNumber" name="contactNumber" placeholder="Contact Number" oninput="checkContNum()" size="20"  maxlength = "11" value="{{data1.contactNumber}}"> 
                                    <span class="error contactnumber-error">
                                    <i class="bx bx-error-circle error-icon"></i>
                                    </span> <p class="error-text">This field is required</p>

                                    <input type="text" class="address1" name="address1" placeholder="House number & lot number" oninput="checkAdd1()" size="35" value="{{data1.address1}}">
                                    <span class="error address1-error">
                                    <i class="bx bx-error-circle error-icon"></i>
                                    </span> <p class="error-text">This field is required</p>

                                    <input type="text" class="address2" name="address2" placeholder="Barangay" oninput="checkAdd2()" size="35" value="{{data1.address2}}" style="width: 49.4%">
                                    <span class="error address2-error">
                                    <i class="bx bx-error-circle error-icon"></i>
                                    </span> <p class="error-text">This field is required</p>

                                    <input type="text" class="address3" name="address3" placeholder="City" oninput="checkAdd3()" size="35" value="{{data1.address3}}" style="width: 49.4%">
                                    <span class="error address3-error">
                                    <i class="bx bx-error-circle error-icon"></i>
                                    </span> <p class="error-text">This field is required</p>

                                    <input type="text" class="address4" name="address4" placeholder="Province" oninput="checkAdd4()" size="35" value="{{data1.address4}}" style="width: 49.4%">
                                    <span class="error address4-error">
                                    <i class="bx bx-error-circle error-icon"></i>
                                    </span> <p class="error-text">This field is required</p>

                                    <input type="number" class="zipcode" name="zipcode" placeholder="Zip Code" oninput="checkZip()" size="4" maxlength="4" value="{{data1.zipcode}}" style="width: 49.4%" >
                                    <span class="error zipcode-error">
                                    <i class="bx bx-error-circle error-icon"></i>
                                    </span> <p class="error-text">This field is required</p>

                                    <div class="btn-box">
                                        <button type="button" id="Back1">Back</button>
                                        <button type="button" id="Next2">Next</button>
                                    </div>
                                </div>
                            </fieldset>
                            <fieldset>
                                <div class="form-card">
                                    <h2 class="fs-title text-center">Success !</h2>
                                    <br><br>
                                    <div class="row justify-content-center">
                                        <div class="col-3">
                                            <img src="https://img.icons8.com/color/96/000000/ok--v2.png" class="fit-image">
                                        </div>
                                    </div>
                                    <br><br>
                                    <div class="row justify-content-center">
                                        <div class="col-7 text-center">
                                            <h5>You Have Successfully Signed Up</h5>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
